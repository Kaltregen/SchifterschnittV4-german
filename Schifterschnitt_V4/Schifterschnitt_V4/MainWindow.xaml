                            <Grid Name="gridPyramideWinkel" MouseWheel="GridPyramidAngle_MouseWheel" MouseLeftButtonDown="SaveMousePosition" MouseMove="GridPyramidAngle_MouseMove" Grid.Row="2" Background="White">
