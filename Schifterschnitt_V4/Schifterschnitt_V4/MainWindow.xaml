                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0 3 0 3">
                                            <TextBlock Width="240" VerticalAlignment="Center" Text="Umkreisradius oben"/>
                                            <TextBlock Width="100" TextAlignment="Center" x:Name="textBlockPyramideWinkelUmkreisradiusOI" Padding="2">
                                                <TextBlock.Background>
                                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                                </TextBlock.Background>
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0 3 0 3">
                                            <TextBlock Width="240" VerticalAlignment="Center" Text="Inkreisradius unten"/>
                                            <TextBlock Width="100" TextAlignment="Center" x:Name="textBlockPyramideWinkelInkreisradiusUI" Padding="2">
